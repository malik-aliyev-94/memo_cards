<%- include('_header.js') %>
<div class="alert" id="new-word" style="display: none;">
    <p>"<b></b>" added to vocabulary.</p>
    <a class="waves-effect waves-light btn-large green action-reload">refresh</a>
</div>
<div class="memo-content">
    <div style="position: relative;">
        <div style="position: absolute; top: 40px;">
            <span style="float: left; color: #fff; margin-left: 0;" class="badge blue"><%= stat.all %></span>
            <span style="float: left; color: #fff;" class="badge green"><%= stat.learned %></span>
            <span style="float: left; color: #fff;" class="badge orange"><%= stat.training %></span>
            <span style="float: left; color: #fff;" class="badge red"><%= stat.must %></span>
        </div>
    </div>

    <div id="actions">
        <button class="waves-effect waves-light btn red delete-selected">Delete</button>
        <button class="waves-effect waves-light btn train-selected">Train</button>
    </div>

    <table class="highlight" id="table" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th class="no-bg"></th>
                <th>Source</th>
                <th>Translation</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
        <% for(var i=0; i<data.length; i++) { %>
            <tr>
                <td>
                    <label>
                        <input type="checkbox" class="check-word" value="<%= data[i]['id'] %>" />
                        <span></span>
                    </label>
                </td>
                <td><%= data[i]['source'] %></td>
                <td><%= data[i]['translation'] %></td>
                <td>
                <% if(data[i]['status'] == 2){ %> 
                    <span class="new badge green" data-badge-caption="">learned</span>
                <% } else if(data[i]['status'] == 1) { %>
                    <span class="new badge orange" data-badge-caption="">training</span>
                <% } else { %>
                    <span class="new badge red" data-badge-caption="">must be learned</span>
                <% } %>
                </td>
                <td style="text-align: right;">
                    <a class="dropdown-trigger btn-flat" data-target='dropdown<%= data[i]['id'] %>'><i class="material-icons">more_vert</i></a>
                    <ul id='dropdown<%= data[i]['id'] %>' class='dropdown-content'>
                        <li><a class="modal-trigger load-content" data-href="/view?id=<%= data[i]['id'] %>" data-c=".modal-content" href="#modal1">View</a></li>
                        <li><a class="modal-trigger load-content" data-href="/edit?id=<%= data[i]['id'] %>" data-c=".modal-content" href="#modal1">Edit</a></li>
                        
                        <!-- <li><a href="/view?id=<%= data[i]['id'] %>">View</a></li> -->
                        <!-- <li><a href="/edit?id=<%= data[i]['id'] %>">Edit</a></li> -->
                        <li><a href="#" data-href="/remove?id=<%= data[i]['id'] %>" class="remove-this">Remove</a></li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<%- include('_footer.js') %>