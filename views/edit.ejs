<!-- Modal Structure -->
<div class="memo-content">
<% if(data) { %>
  <form method="POST" action="/edit?id=<%=data['id']%>" class="ajax-form">
    
    <div style="padding: 30px 0;">
      <!-- <a href="/"><i class="material-icons dp48" style="font-size: 35px;">arrow_back</i></a> -->
      <h3 style="display: inline-block; margin: 0;">Edit `<%= data['source'] %>`</h3>  
      <button type="submit" class="btn blue" style="display: inline-block; vertical-align: bottom; margin-left: 30px;">Save</button>
    </div>

    <div class="row">

        <div class="col s4">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="source" id="i1" value="<%= data['source'] %>">
              <label for="i1">Source</label>
            </div>
          </div>
        </div>
    
        <div class="col s4">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="translit" id="i2" value="<%= data['translit'] %>">
              <label for="i2">Translit</label>
            </div>
          </div>
        </div>
    
        <div class="col s4">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="translation" id="i3" value="<%= data['translation'] %>">
              <label for="i3">Translation</label>
            </div>
          </div>
        </div>
    
    </div> 

    <div class="row">

        <div class="col s6">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="synonyms" id="i4" value="<%= data['synonyms'] %>">
              <label for="i4">Synonyms</label>
            </div>
          </div>
        </div>
    
        <div class="col s6">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="antonyms" id="i5" value="<%= data['antonyms'] %>">
              <label for="i5">Antonyms</label>
            </div>
          </div>
        </div>
    
    </div> 


    <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <textarea name="context" id="i6" class="materialize-textarea"><%= data['context'] %></textarea>
              <label for="i6">Context</label>
            </div>
          </div>
        </div>
    
        <!-- <div style="text-align: center;">
          <button type="submit" class="btn btn-large blue">Save</button>
        </div> -->
    </div> 
  </form>

  <div style="padding: 30px 0;">
    <h3 style="display: inline-block; margin: 0;">vocabulary.com</h3>  
    <a style="display: inline-block; vertical-align: text-bottom; margin-left: 30px;" href="#" class="btn btn-small blue load-from-web" data-id="<%= data['id'] %>">Load</a>
  </div>
  <div class='vocabulary-data bordered'>
    <%- data['examples'] %>
  </div>

<% } else { %>
  <h3>No item found.</h3>
<% } %>
</div>