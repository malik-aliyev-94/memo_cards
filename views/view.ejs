<!-- Modal Structure -->
<div class="memo-content">
<% if(data) { %>

  <div style="padding: 30px 0;">
    <!-- <a href="/"><i class="material-icons dp48" style="font-size: 35px;">arrow_back</i></a> -->
    <h3 style="display: inline-block; margin: 0;">View `<%= data['source'] %>`</h3>  
  </div>

  <table>
    <thead>
      <tr>
          <th style="color: #2196F3;">Source</th>
          <th style="color: #2196F3;">Translit</th>
          <th style="color: #2196F3;">Translation</th>
      </tr>
    </thead>
    <tbody>
      <tr class="view">
        <td><%= data['source'] %></td>
        <td><%= data['translit'] %></td>
        <td><%= data['translation'] %></td>
      </tr>
    </tbody>
  </table>
  <br>
  <table>
    <thead>
      <tr>
          <th style="color: #2196F3;" width="50%">Synonyms</th>
          <th style="color: #2196F3;">Antonyms</th>
      </tr>
    </thead>
    <tbody>
      <tr class="view">
        <td><%= data['synonyms'] %></td>
        <td><%= data['antonyms'] %></td>
      </tr>
    </tbody>
  </table>
  <br>
  <table>
    <thead>
      <tr>
          <th style="color: #2196F3;">Context</th>
      </tr>
    </thead>
    <tbody>
      <tr class="view">
        <td style="font-size: 24px;"><%- data['context'] ? data['context'].replace(/\n/g, '<br/>') : '' %></td>
      </tr>
    </tbody>
  </table>


  <div style="padding: 30px 0;">
    <h3 style="display: inline-block; margin: 0;">vocabulary.com</h3>  
    <a style="display: inline-block; vertical-align: text-bottom; margin-left: 30px;" href="#" class="btn btn-small blue load-from-web" data-id="<%= data['id'] %>">Load</a>
  </div>
  <div class='vocabulary-data bordered'>
    <%- data['examples'] %>
  </div>
<% } else { %>
<h3>No item found.</h3>
<% } %>
</div>